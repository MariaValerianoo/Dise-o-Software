<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Agregar Llanta – Llantas DC</title>

  <!-- Bootstrap CSS + Icons -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
    rel="stylesheet"
  />

  <!-- Tu CSS global -->
  <%- include('../partials/head') %>

  <!-- Estilos específicos de layout -->
  <style>
    body { overflow-x: hidden; }
    .sidebar { min-width: 200px; }
    main     { flex: 1; background: #f8f9fa; }
  </style>
</head>
<body class="d-flex">
  <!-- Sidebar -->
  <div class="sidebar">
    <%- include('../partials/navigation') %>
  </div>

  <!-- Contenido principal: Formulario de nueva llanta -->
  <main class="flex-fill p-4">
    <div class="container-fluid">
      <h1 class="mb-4 text-danger">Agregar Llanta</h1>
      <div class="card shadow-sm mx-auto" style="max-width: 600px;">
        <div class="card-body">
          <form action="/llantas" method="POST">
            <div class="mb-3">
              <label for="marca" class="form-label">Marca</label>
              <input
                type="text"
                id="marca"
                name="marca"
                class="form-control rounded-pill"
                required
              />
            </div>
            <div class="mb-3">
              <label for="medida" class="form-label">Medida</label>
              <input
                type="text"
                id="medida"
                name="medida"
                class="form-control rounded-pill"
                required
              />
            </div>
            <div class="mb-3">
              <label for="stock" class="form-label">Stock</label>
              <input
                type="number"
                id="stock"
                name="stock"
                class="form-control rounded-pill"
                required
              />
            </div>
            <div class="mb-3">
              <label for="precio" class="form-label">Precio</label>
              <input
                type="number"
                step="0.01"
                id="precio"
                name="precio"
                class="form-control rounded-pill"
                required
              />
            </div>
            <button type="submit" class="btn btn-danger w-100">
              Crear Llanta
            </button>
            <a href="/llantas" class="btn btn-secondary w-100 mt-2">Cancelar</a>
          </form>
        </div>
      </div>
    </div>
  </main>

  <%- include('../partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
